@page "/PanelComponent"

    <div class="card">
        <div class="card-header bg-success text-white">
        @Title
        </div>
       
        <div class="card-body">

            <div class="card-text">
                @ChildContent
            </div>
        </div>
    </div>

@functions{
    [Parameter]
    private string Title { get; set; }

    [Parameter]
    private RenderFragment ChildContent { get; set; }
}